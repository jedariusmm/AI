{
  "name": "nupibook",
  "version": "1.0.0",
  "description": "NUPIBOOK - Your Personal AI Social Network",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "nodemon server.js",
    "test-webhook": "stripe listen --forward-to localhost:3000/api/stripe/webhook",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --mac"
  },
  "keywords": [
    "social",
    "network",
    "ai",
    "nupibook"
  ],
  "author": "NUPI",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "stripe": "^14.9.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.nupi.nupibook",
    "productName": "NUPIBOOK",
    "mac": {
      "category": "public.app-category.social-networking",
      "icon": "icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!node_modules/**/*"
    ]
  }
}
